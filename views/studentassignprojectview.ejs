    <!-- Page Content  -->
    <div id="content" class="container">


        <div style="margin-left: -6rem; background-color:#fcfcfc;width:20rem;margin-top:-2rem;">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/home/">Home</a></li>
                  <li class="breadcrumb-item active" aria-current="page"></li>
                </ol>
            </nav>
        </div>

    <div style="margin-left: -14rem; width:100rem;">
        
        <div class="container" style="margin-top: -8rem;">
            <div style="margin-left: 100%;width:40rem;box-shadow: 0px 3px 6px #00000029;height: 55rem;">
                <h3 style="padding:2rem;background-color:yellow;width: 75;"><span style="margin-left: 38%;">Details</span></h3>
                <div style="margin-left: 6rem;">
                    <h3 style="color: black;"><img src="../public/img/peopletick.svg" style="color: #000;background: #FFFFFF;border-radius: 50%;height: 55px;width: 55px;text-align: center;padding: 7px;border-color:yellow;box-shadow: 0px 1px 3px yellow;"><span style="margin-left: 1rem;">Assigned By</span></h3>
                    <p style="margin-left: 4rem;margin-top:-2rem;"><%=teacher.username%></p>
                </div>
                <div style="margin-left: 6rem;">
                    <h3 style="color:black"><img src="../public/img/students.svg" style="color: #000;background: #FFFFFF;border-radius: 50%;height: 55px;width: 55px;text-align: center;padding: 7px;border-color:yellow;box-shadow: 0px 1px 3px yellow;"><span style="margin-left: 1rem;">Assigned To</span></h3>
                    <p style="margin-left: 4rem;margin-top:-2rem;"><%=student.name%></p>
                </div>
                <div style="margin-left: 6rem;">
                    <h3 style="color:black"><img src="../public/img/info.svg" style="color: #000;background: #FFFFFF;border-radius: 50%;height: 55px;width: 55px;text-align: center;padding: 7px;border-color:yellow;box-shadow: 0px 1px 3px yellow;"><span style="margin-left: 1rem;">Submission Details</span></h3>
                    <p style="margin-left: 4rem;margin-top:-2rem;font-weight: bold;">Assigned On</p>
                    <p style="margin-left: 4rem;margin-top:-1rem;">Assigned Date</p>
                    <p style="margin-left: 18rem;margin-top:-4.5rem;font-weight: bold;">Due By</p>
                    <p style="margin-left: 18rem;margin-top: -1rem;">Due Date</p>
                </div>
            </div>
        </div>
        <div class="row" style="margin-bottom: 5rem;margin-top: -48rem;">
            <div class="col-lg-1">
            
            </div>
            <div class="col-lg-10" style="box-shadow: 0px 3px 6px #00000029;">
                
                <div class="row">
                    <div class="col-lg-1">
                    
                    </div>

                    
                    <div class="col-lg-10">
                    
                        <div style="height: 70px;"></div>

                        <h3><%=project.title%></h3><br>
                        
                        <p class="keywords" style="padding: 0;margin-top: -2rem;"><%=project.subject%>&nbsp;&nbsp;</p>
                        
                        <hr style="border: 2px solid #D3D3D3;">


                <!-- Tabs -->
                <section id="tabs" style="margin-top: 0;">
                    
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#project">Project</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#submission">Submission</a>
                        </li>
                    </ul>
                    
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane container active" id="project" style="margin-left: -1rem;">
                            <h5 style="margin-top:2rem;">Overview</h5>
                            <p id="innerpara">
                                <%=project.summary%>
                            </p>


                            <h5>Inquiry Question</h5>
                            <p id="innerpara">
                                <%=project.inquiryQuestion%>
                            </p>
                            

                            <h5>Activity</h5>

        
                            <!-- Activities -->
        
                            <div class="row">
        
                                <%for(j of project.activity){%>
                                    <div class="col-lg-11">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <p id="innerpara"><%=j.activity_title%></p>
                                            </div>
                                            <div class="col-lg-1">
                                                <div style="text-align: center;margin-top: 20px;">
                                                    <img src="../public/img/attachment.svg" alt="">
                                                </div>
                                            </div>                                 
                                          <%for(i of j.attached_files){%>
                                            <div class="col-lg-3">
                                                <div style="margin: 10px;">
                                                    <div class="row document">
                                                        <div class="col-lg-11 p-0 d-flex justify-content-left">
                                                            <img src="../public/img/doc.png" style="height: 40px;width: 40px;margin-right: 10px;">
                                                            <div>
                                                                <p class="filename"><%=i%></p>
                                                                <p class="filesize">2 MB</p>
                                                            </div> 
                                                        </div>
                                                        <div class="col-lg-1 p-0">
                                                            <img src="../public/img/filedownload.svg" style="height: 20px;width: 20px;margin-top: 10px;">
                                                        </div>
                                                    </div>
                                                </div>
    
                                            </div>

                                          <%}%>
    
                                        </div>
                                    </div>

                                <%}%>
        
        
                                <div class="col-lg-12">&nbsp;</div>
                                <div class="col-lg-12">&nbsp;</div>
        
        
                                <div class="col-lg-12">&nbsp;</div>
                                <div class="col-lg-12">&nbsp;</div>
        
        
                                
        
                                <div class="col-lg-12">&nbsp;</div>
                                <div class="col-lg-12">&nbsp;</div>
        
                            </div>
                        </div>
                        <div class="tab-pane container fade" id="submission" style="margin-left: -1rem;">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs" style="margin-top: 2rem;">
                                <%for(i=1; i<=activities.length; i++){%>
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="tab" href="#activity<%=i%>">Activity<%=i%></a>
                                        </li>
                                <%}%>
                            </ul>
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <%for(i=1; i<=activities.length; i++){%>
                                    <div id="activity<%=i%>" class="tab-pane fade" >
                                        <form method="POST" action="/submit-activity/activity_<%=i%>&<%=id%>&<%=activities._id%>" enctype="multipart/form-data">
                                        <h4 style="margin-top: 1rem;font-weight: bold;margin-left:1rem;">Activity Details</h4>
                                        <p style="border-radius: 10px;background: chartreuse;width: 27%;margin-left: 1rem;"><span style="margin-left:0.5rem;color: white;">Due By <%=activities[i-1].enddate.toDateString()%></span></p>
                                        <p style="margin-left: 1rem;margin-top: 1rem;">Activity Details</p>
                                        <h4 style="margin-top: 1rem;font-weight: bold;margin-left: 1rem;">Attach Files</h4>
                                        <div class="col-lg-12" style="margin-top:1rem;margin-left:1rem;">
                                            <div id="drop-area">
                                                <div class="my-form">
                                                    <input name="attachedfiles" style="margin-left:12rem;margin-top:2rem;" type="file" id="fileElem" onchange="handleFiles(this.files)">
                                                    <label class="button" for="fileElem" style="margin-left:9rem;margin-top:0.5rem;"><img src="../public/img/redplus.svg">Drop your image here or choose files</label>
                                                </div>
                                                <div id="gallery"></div>
                                            </div>
                                        </div>
                                        <h4 style="margin-top: 1rem;font-weight: bold;margin-left:1rem;">Add your comment</h4>
                                        <div class="col-lg-11" style="margin-top: 30px;margin-left:1rem;">
                                            <div class="texteditor">
                                                <textarea style="width: 100%;" id="editor" name='comment'></textarea>
                                            </div>
                                        </div>  
                                        <button class="btn btn-large btn-danger" style="margin-left:22rem;margin-top:2rem;">Submit</button> 
                                    </form>                                 
                                    </div>
        
                                <%}%>
                            </div>
                        </div>
                    </div>
                    
                </section>
                    

                        <div style="height: 70px;"></div>

                    </div>

                    <div class="col-lg-1">
                    
                    </div>

                </div>

            </div>

            <div class="col-lg-1">

            </div>

        
            

        </div>
    </div>
        <!-- Overview ends -->   
        

    </div>
    
</body>
