                '|',
                'bold',
                'italic',
                'underline',
                '|',
                'fontColor',
                'fontSize',
                'fontFamily',
                '|',
                'bulletedList',
                'numberedList',
                'alignment',
                '|',
                'specialCharacters',
                'pageBreak',
                'exportPdf',
            ]
        },
        language: 'en',
        licenseKey: '',
        
        
    } )
